<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AddSubject.AddSubjectActivity"
        android:background="@color/bombay"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_addSubject_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_begin="25dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_addSubject_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_end="25dp" />

        <TextView
            android:id="@+id/txt_addSubjct_inputNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="과목 이름"
            android:textSize="30dp"
            android:fontFamily="@font/gowun_dodum_regular"

            android:layout_marginTop="100dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_addSubject_line1"
            />
        <EditText
            android:id="@+id/edt_addSubject_inputSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:hint="과목을 입력하세요."
            android:textSize="20sp"

            android:paddingVertical="14dp"

            android:background="@drawable/input_shape"

            app:layout_constraintTop_toBottomOf="@+id/txt_addSubjct_inputNameTitle"
            app:layout_constraintStart_toStartOf="@id/guideline_addSubject_line1"
            app:layout_constraintEnd_toEndOf="@id/guideline_addSubject_line2"
            />

        <Button
            android:id="@+id/btn_addSubject_addBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="추가"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gowun_dodum_regular"

            android:layout_marginBottom="16dp"

            android:background="@drawable/btn"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_addSubject_line1"
            app:layout_constraintEnd_toEndOf="@id/guideline_addSubject_line2"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>