<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MethodDetail.MethodDetailActivity">

        <TextView
            android:id="@+id/txt_methodDetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="OOO공부법"
            android:textSize="24sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt_methodDetail_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="국어"

            app:layout_constraintTop_toTopOf="@+id/txt_methodDetail_title"
            app:layout_constraintBottom_toBottomOf="@+id/txt_methodDetail_title"
            app:layout_constraintStart_toEndOf="@+id/txt_methodDetail_title"
            />

        <TextView
            android:id="@+id/txt_methodDetail_ex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="그냥 아무렇지 않게 공부하기"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@id/txt_methodDetail_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>