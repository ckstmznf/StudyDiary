<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Splash.SplashActivity"


    android:background="@color/bombay"
    >
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_splash_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintGuide_begin="25dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_splash_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintGuide_end="25dp"
        />

    <TextView
        android:id="@+id/txt_splash_mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="공부 일기"
        android:textSize="48sp"
        android:textColor="@color/big_stone"
        android:fontFamily="@font/gowun_dodum_regular"

        android:letterSpacing="0.7"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_splash_line1"
        app:layout_constraintEnd_toEndOf="@id/guideline_splash_line2"

        app:layout_constraintVertical_bias="0.3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Study Diary"
        android:textSize="16sp"
        android:textColor="@color/big_stone"
        android:fontFamily="@font/gowun_dodum_regular"

        android:letterSpacing="0.8"

        app:layout_constraintTop_toBottomOf="@id/txt_splash_mainTitle"
        app:layout_constraintStart_toStartOf="@id/guideline_splash_line1"
        app:layout_constraintEnd_toEndOf="@id/guideline_splash_line2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="자신이 공부법을 기록하세요."
        android:textSize="16sp"
        android:textColor="@color/big_stone"
        android:fontFamily="@font/gowun_dodum_regular"

        android:layout_marginBottom="56dp"

        android:letterSpacing="0.5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_splash_line1"
        app:layout_constraintEnd_toEndOf="@id/guideline_splash_line2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>